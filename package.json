{
	"name": "explain-it",
	"version": "1.0.0",
	"type": "module",
	"main": "dist/index.js",
	"directories": {
		"doc": "docs"
	},
	"scripts": {
		"test": "vitest run",
		"test:watch": "vitest",
		"build": "tsc",
		"start": "tsx src/index.ts",
		"lint": "biome lint ./src ./test",
		"format": "biome format ./src ./test --write",
		"check": "biome check ./src ./test",
		"check:fix": "biome check ./src ./test --write",
		"build:bundle": "npm run build && ncc build dist/index.js -o bundle --minify"
	},
	"description": "AI-powered learning assistant using the Feynman Method.",
	"bin": {
		"explain-it": "./dist/index.js"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"engines": {
		"node": ">=18.0.0"
	},
	"keywords": [
		"ai",
		"learning",
		"feynman-method",
		"cli",
		"claude",
		"llm",
		"education"
	],
	"dependencies": {
		"@anthropic-ai/sdk": "^0.71.2",
		"@types/node": "^25.0.9",
		"duck-duck-scrape": "^2.2.7",
		"fs-extra": "^11.3.3",
		"google-auth-library": "^10.5.0",
		"handlebars": "^4.7.8",
		"ink": "^6.6.0",
		"ink-big-text": "^2.0.0",
		"ink-gradient": "^3.0.0",
		"ink-select-input": "^6.2.0",
		"ink-spinner": "^5.0.0",
		"ink-text-input": "^6.0.0",
		"meow": "^14.0.0",
		"openai": "^6.16.0",
		"react": "^19.2.3",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@types/fs-extra": "^11.0.4",
		"@types/react": "^19.2.9",
		"@vercel/ncc": "^0.38.4",
		"dotenv": "^17.2.3",
		"esbuild": "^0.27.2",
		"tsx": "^4.21.0",
		"vitest": "^4.0.17"
	}
}
